#!/usr/bin/env bash
# This script displays the content of the file /etc/passwd
# Define while loop
while read line;
do
	username=$(echo "$line" | cut -d: -f1)
	uid=$(echo "$line" | cut -d: -f3)
	home=$(echo "$line" | cut -d: -f6)
	echo "Username: $username"
	echo "User_ID: $uid"
	echo "Home_Directory: $home"
	echo ""
done < "/etc/passwd"
